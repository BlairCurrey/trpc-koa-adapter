{
  "name": "trpc-koa-adapter",
  "version": "1.0.0",
  "author": "Blair Currey",
  "description": "Koa adapter for tRPC",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlairCurrey/trpc-koa-adapter"
},
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm ./dist/* && tsc",
    "test": "jest",
    "lint": "eslint --fix \"src/**/*.{js,ts}\"",
    "format": "prettier --config --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "trpc",
    "koa",
    "adapter",
    "middleware",
    "typescript"
  ],
  "devDependencies": {
    "@trpc/server": "^9.27.0",
    "@types/jest": "^29.0.3",
    "@types/koa": "^2.13.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.3",
    "koa": "^2.13.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.3",
    "husky": "^8.0.0"
  },
  "peerDependencies": {
    "@trpc/server": ">=9.27.0",
    "koa": ">=2.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint-staged && pnpm test"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write --config ./.prettierrc",
      "eslint --fix --max-warnings=0"
    ]
  }
}
