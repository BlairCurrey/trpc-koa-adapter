{
  "name": "trpc-koa-adapter",
  "version": "1.2.0",
  "author": "Blair Currey",
  "description": "Koa adapter for tRPC",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlairCurrey/trpc-koa-adapter"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "ci-install": "HUSKY=0 pnpm install",
    "build": "rm -rf ./dist && tsc",
    "test": "jest",
    "lint": "eslint --fix \"src/**/*.{js,ts}\"",
    "format": "prettier --config --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "trpc",
    "koa",
    "adapter",
    "middleware",
    "typescript"
  ],
  "packageManager": "pnpm@8.15.4",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@koa/bodyparser": "^5.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@trpc/server": "^10.33.0",
    "@types/jest": "^29.5.2",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@trpc/server": "^10.0.0-rc.4",
    "koa": ">=2.13.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pnpm lint-staged && pnpm test"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write --config ./.prettierrc",
      "eslint --fix --max-warnings=0"
    ]
  }
}
